
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin access check helper
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'gardenfood588@gmail.com';
    }

    // Public Collections (Read for everyone, Write for Admin)
    match /festivals/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /menuItems/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /menuCategories/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders Collection Rules
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow update: if isAdmin() || (
        request.auth != null && 
        resource.data.userId == request.auth.uid && 
        (resource.data.status == 'pending' || resource.data.status == 'accepted') &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'rejectReason', 'cancelledBy', 'updatedAt'])
      );
      allow delete: if isAdmin();
    }
    
    // Users Collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Referral Rewards
    match /referralRewards/{id} {
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow write: if isAdmin();
    }

    // Default catch-all for any new collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
